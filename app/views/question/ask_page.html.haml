= form_tag question_index_path, method: :post, remote: true do
  = hidden_field_tag 'slide-id', @slide_id
  = hidden_field_tag 'slide-page-num', @slide_page_num
  = text_area_tag 'question-content'
  = button_tag "Submit", data: {"disable_width" => "Please wait.."}, class: "btn btn-primary btn-block"
