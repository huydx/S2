  %article.slide#function-slideshare
    .row
      .col-md-7
        =image_tag "slideshare.png", class: "slide-share"
      .col-md-5
        %h2 スライド共有
  %article.memo#function-memo
    .row
      .col-md-2
        %h2 メモ共有
      .col-md-10
        =image_tag "memo.png", class: "memo-share"
  %article.question#function-question
    .row
      .col-md-5
        =image_tag "question.png", class: "send-question"
      .col-md-5
      %h1 質問機能

